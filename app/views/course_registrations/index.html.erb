<p id="notice"><%= notice %></p>

<h1>Listing Course Registrations</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>First name</th>
      <th>Last name</th>
      <th>City</th>
      <th>Country</th>
      <th>Reason</th>
      <th>Bio</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_registrations.each do |course_registration| %>
      <tr>
        <td><%= course_registration.course_id %></td>
        <td><%= course_registration.first_name %></td>
        <td><%= course_registration.last_name %></td>
        <td><%= course_registration.city %></td>
        <td><%= course_registration.country %></td>
        <td><%= course_registration.reason %></td>
        <td><%= course_registration.bio %></td>
        <td><%= course_registration.email %></td>
        <td><%= link_to 'Show', course_registration %></td>
        <td><%= link_to 'Edit', edit_course_registration_path(course_registration) %></td>
        <td><%= link_to 'Destroy', course_registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

