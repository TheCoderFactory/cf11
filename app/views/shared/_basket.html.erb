<div class="basket">
  <% if has_order? && current_order.has_items? %>
    <p class="quantity"><b><%= pluralize(current_order.total_items, 'item') %></b> in your shopping bag</p>
    <p class="amount"><b>Total: <%= number_to_currency(current_order.total(promotion_value)) %></b> </p>
    <% if @promotion %>
      <p>Includes <%= number_to_currency(promotion_value) %> discount</p>
    <% end %>
    <p class="buttons">
      <%= link_to "View my bag", basket_path %>
      <%= link_to "Checkout", checkout_path, :class => 'checkout' %>
    </p>
  <% else %>
    <p class="empty"><b>Your shopping bag is empty.</b> </p>
    <p class="empty">How dare it be?! Why not add some stuff to it?</p>
  <% end %>
</div>
